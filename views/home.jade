extends layouts/base

block bar-title-center
  h1.title= title

block bar-tab-inner
  mixin bar-tab('home')

block content
  #home
    .content-padded
      #home-stats
        h2.heading-page
          | You haven't smoked in
          #stats-breakdown
            span.stats-days 11
            |  days, which saved you
            br
            span.stats-dollars 50
            |  dollars and added
            br
            span.stats-minutes 90
            |  minutes to your life!

  #decision
    .choices
      .choice-negative 
        a(href='/craving', data-transition='slide-in') 
          p I'm having a 
            strong craving

      .choice-positive 
        a(href='/distraction', data-transition='slide-in') 
          p I need a 
            strong distraction