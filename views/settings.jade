extends layouts/base

block bar-title-center
  h1.title= title

block bar-title-right
  a.button(href='/signout', data-transition='slide-in') Sign out

block bar-tab-inner
  li.tab-item
    a(href='/home', data-transition='fade')
      i.tab-icon.icon-home
  li.tab-item
    a(href='/stats', data-transition='fade')
      i.tab-icon.icon-bar-chart
  li.tab-item.active
    a(href='/settings', data-transition='fade')
      i.tab-icon.icon-cog

block content
  #stats
    .content-padded
      h1 Settings
      ul.list
        li Push Notification
          .toggle.active
            .toggle-handle
        li Location
          .toggle.active
            .toggle-handle
        li Facebook (connected)
          a.button-main Unlink
        li Twitter (connected)
          a.button-main Unlink

      p
        a(href='') Privacy Policy
        br
        a(href='') Terms of Service
        br